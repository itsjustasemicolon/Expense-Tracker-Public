{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Client",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/client"
      },
      "isBackground": true,
      "problemMatcher": ["$esbuild-watch"]
    },
    {
      "label": "Start Server",
      "type": "shell",
      "command": "npm start",
      "options": {
        "cwd": "${workspaceFolder}/server"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Run Full Stack",
      "dependsOn": ["Start Client", "Start Server"],
      "problemMatcher": []
    }
  ]
}
